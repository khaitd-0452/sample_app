<% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <%= link_to user.name, user %>
    <% if can_destroy_user? user  %>
    | <%= link_to t("views.index.delete"), user, data: { "turbo-method": :delete,
                                          turbo_confirm: "You sure?" } %>
    <% end %>
  </li>
<% end %>
