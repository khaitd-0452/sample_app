<% provide(:title, t("views.home.title")) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("views.home.userMicroposts") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t("views.home.welcome_message") %></h1>
  <h2>
    <%= t(
      "views.home.homePageDescription",
      railsTutorial: link_to(t("views.home.links.railsTutorial"),  Settings.default.outsideLink.railsTutorial)
    ).html_safe %>
  </h2>
  <%= link_to t("views.home.links.signUp"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

<%= link_to image_tag("rails.svg", alt: t("views.home.links.rubyOnRails"), width: "200"),
Settings.default.outsideLink.rubyOnRails %>
