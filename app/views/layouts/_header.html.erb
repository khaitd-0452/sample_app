<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("navigation.home"), root_path %></li>
        <li><%= link_to t("navigation.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("navigation.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown", id: "account" do %>
              <%= t "navigation.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("navigation.profile"), current_user %></li>
              <li><%= link_to t("navigation.settings"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to t("navigation.log_out"), logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("navigation.login"), login_path %></li>
        <% end %>
        <li>
          <% if I18n.locale == :vi %>
            <%= link_to t("navigation.english"), locale: "en" %>
          <% else %>
            <%= link_to t("navigation.vietnamese"), locale: "vi" %>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
