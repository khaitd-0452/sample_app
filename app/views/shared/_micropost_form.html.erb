<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("views.microposts.form_placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
  </span>
  <%= f.submit t("views.microposts.post"), class: "btn btn-primary" %>
<% end %>
